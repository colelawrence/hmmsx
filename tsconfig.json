{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "docs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "jsxFactory": "d",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "strict": true
  },
  "typeAcquisition": {
    "enable": false,
    "exclude": ["react"]
  },
  "include": [
    "src/state/*.ts",
    "src/*.ts",
    "src/*.d.ts",
  ],
  "files": [
    "test/TodoState.ts",
    "test/test.tsx"
  ]
}
